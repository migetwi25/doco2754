# password to change these preferences via webfrontend (default: lam)
Passwd: {SSHA}3NxBaiZfEemGniLbJWhJDYsXaD8= rexbFg==

# suffix of tree view
# e.g. dc=yourdomain,dc=org
treesuffix: dc=example,dc=com

