#!/bin/bash

set -e

if [[ ! -f /var/www/html/sess/.htaccess ]]; then
cat << EOF > /var/www/html/sess/.htaccess
<Files *>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
</Files>
EOF
fi

if [[ ! -f /config/setup ]]; then
